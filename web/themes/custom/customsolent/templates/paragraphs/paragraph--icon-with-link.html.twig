{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{% block paragraph %}

	<style>
		.paragraph--type--icon-with-link > * .field--name-field-icon > * .field__item {
			color: {{paragraph.field_color_text.0.entity.field_color.value.0.color}}
			;

			display: flex;
			align-items: center;
		}
	</style>


