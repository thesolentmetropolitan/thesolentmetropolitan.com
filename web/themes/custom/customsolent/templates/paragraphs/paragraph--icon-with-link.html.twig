{% set instance_id = 'paragraph-' ~ bundle ~ '-' ~ paragraph.id() %}

{% block paragraph %}

	<style>
		 #{{ instance_id }} {
			color: {{paragraph.field_color_text.0.entity.field_color.value.0.color}}
			;
			display: flex;
			align-items: center;
			height: 2em;
			width: 2em;
			overflow: hidden;
		}
	</style>


	{# 1. Get the Media entity from your field #}
