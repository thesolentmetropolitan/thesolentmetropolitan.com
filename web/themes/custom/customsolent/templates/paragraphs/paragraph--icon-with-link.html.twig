	{% block content %}



		<a href="{{ paragraph.field_link.0.url }}">
			{% if file_entity %}
				<div id="{{ instance_id }}" {{attributes.addClass(classes) }}>
					{{ source( file_url(file_entity.uri.value), ignore_missing = true) }}
				</div>
			{% endif %}
		</a>
	{% endblock %}

{% endblock paragraph %}
